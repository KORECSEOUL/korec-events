const utmSource = url.searchParams.get('utm_source') || '(not set)';
const utmMedium = url.searchParams.get('utm_medium') || '(not set)';
const utmCampaign = url.searchParams.get('utm_campaign') || '(not set)';
const queryString = utmSource !== '(not set)' ? `?utm_source=${utmSource}&utm_medium=${utmMedium}&utm_campaign=${utmCampaign}` : '';
